<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Field Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- Avatar Styles -->
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>